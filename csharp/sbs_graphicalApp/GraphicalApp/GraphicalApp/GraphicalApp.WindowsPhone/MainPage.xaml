<Page
    x:Class="GraphicalApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphicalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Height="152" Width="367">
        <Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="182,1,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="21,24,0,0" TextWrapping="Wrap" Text="Please enter your name" VerticalAlignment="Top" SelectionChanged="textBlock_SelectionChanged" FontSize="14"/>

    </Grid>
</Page>