<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="Let's talk" Height="158" Width="412">
    <Grid>
        <TextBlock x:Name="enterName" HorizontalAlignment="Left" Margin="45,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="217" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.25"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.262"/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="Please enter"/><Run Text=" "/><Run Text="your name"/></TextBlock>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="23" Margin="45,62,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="275,66,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
